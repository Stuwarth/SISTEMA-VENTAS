rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function userTenant() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId
        : null;
    }
    function userRole() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
        : null;
    }

    match /tenants/{tenantId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.owner == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.owner == request.auth.uid;
    }

    match /cash_sessions/{docId} {
      allow read: if isSignedIn() && resource.data.tenantId == userTenant();
      allow create, update, delete: if false;
    }

    match /audit_logs/{docId} {
      allow read: if isSignedIn() && userRole() in ['owner','admin'];
      allow create, update, delete: if false;
    }

    match /stock_alerts/{docId} {
      allow read: if isSignedIn() && (resource.data.tenantId == userTenant() || userRole() in ['owner','admin']);
      allow create: if false;
      allow update: if isSignedIn() && userRole() in ['owner','admin'];
      allow delete: if false;
    }

    match /{collection}/{docId} {
      allow read: if isSignedIn() && (
        (resource != null && resource.data.tenantId == userTenant()) ||
        (request.resource != null && request.resource.data.tenantId == userTenant())
      );

      allow create: if isSignedIn() && request.resource.data.tenantId == userTenant();

      allow update, delete: if isSignedIn() && resource != null && resource.data.tenantId == userTenant() && (
        userRole() in ['owner','admin'] || request.auth.uid == resource.data.createdBy
      );
    }
  }
}
